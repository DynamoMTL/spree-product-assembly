<p>
  <%= f.label :can_be_part, t("can_be_part")%><br />
  <%= f.check_box(:can_be_part) %>
</p>
<p>
  <%= f.label :individual_sale, t("individual_sale")%><br />
  <%= f.check_box(:individual_sale) %>
</p>
<p>
  <%= f.label :decouple_inventory_from_parts, t("decouple_inventory_from_parts")%><br />
  <%= f.check_box(:decouple_inventory_from_parts) %>
</p>


<% if @product.assembly? && !@product.decouple_inventory_from_parts? %>
  <% content_for :head do %>
    <script type="text/javascript">
      jQuery(document).ready(function(){
        $("input[id='product_on_hand']").disable().parent().hide();
      });
    </script>
  <% end %>
<% end %>
